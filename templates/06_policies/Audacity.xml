<?xml version="1.0" encoding="UTF-8"?>
<policy>
    <general>
        <name>Audacity</name>
        <enabled>true</enabled>
        <trigger>CHECKIN</trigger>
        <trigger_checkin>true</trigger_checkin>
        <frequency>Once every day</frequency>
        <category>
            <name>Applikationen</name>
        </category>
    </general>
    <scope>
        <all_computers>true</all_computers>
    </scope>
    <files_processes>
        <search_by_path>/Applications/Audacity</search_by_path>
        <delete_file>true</delete_file>
        <run_command>/usr/local/bin/aky audacity && /usr/local/bin/jsssr "Install Lame Library for Audacity.sh"</run_command>
    </files_processes>
</policy>
